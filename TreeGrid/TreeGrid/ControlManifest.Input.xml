      <code path="index.ts" order="1" />
      <css path="scripts/jstree.style.min.css" order="2" />
      <img path="resources/40px.png" />
      <img path="resources/32px.png" />
      <img path="resources/throbber.gif" />
    </resources>
    <feature-usage>
      <uses-feature name="WebAPI" required="true" />
